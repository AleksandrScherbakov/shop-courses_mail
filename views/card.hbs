<h1>Корзина</h1>
<div id="card">
{{#if courses.length}}
    <table>
        <thead>
        <tr>
            <th>Название</th>
            <th>Количество</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {{#each courses}}
        <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
                <button class="btn-small btn js-remove" data-id="{{id}}" type="submit" data-csrf="{{@root.csrf}}">Удалить</button>
            </td>
        </tr>
        {{/each}}
        </tbody>
    </table>
    <p>Цена: <span>{{price}} Р</span></p>
    <form action="/orders" method="post">
        <input type="hidden" value="{{@root.csrf}}" name="_csrf">
        <button type="submit" class="btn">Сделать заказ</button>
    </form>
{{else}}
    <p>В корзине нет курсов <a href="/courses">добавить</a></p>
{{/if}}
</div>