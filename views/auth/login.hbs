<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs tabs-fixed-width">
                <li class="tab col s3"><a href="#login" class="active">Войти</a></li>
                <li class="tab col s3"><a href="#register">Регистрация</a></li>
            </ul>
        </div>
        <div id="login" class="col s12">
            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}
            <h1>Войти в магазин</h1>
            <form class="col s12" method="post" action="/auth/login">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" type="email" class="validate" name="email" required>
                        <label for="email">Email</label>
                        <span class="helper-text" data-error="Введите email"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" type="password" class="validate" name="password" required>
                        <label for="password">Пароль</label>
                        <span class="helper-text" data-error="Введите пароль"></span>
                    </div>
                </div>
                <input type="hidden" value="{{@root.csrf}}" name="_csrf">
                <p><a href="auth/reset">Забыли пароль?</a></p>
                <input type="submit" class="waves-effect waves-light btn" value="Войти">
            </form>
        </div>
        <div id="register" class="col s12">
            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}
            <h1>Создать аккаунт</h1>
            <form class="col s12" method="post" action="/auth/register" novalidate>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" type="email" class="validate" name="email" required>
                        <label for="email">Email</label>
                        <span class="helper-text" data-error="Введите email"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" type="password" class="validate" name="password" required>
                        <label for="password">Пароль</label>
                        <span class="helper-text" data-error="Введите пароль"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="confirm" type="password" class="validate" name="confirm" required>
                        <label for="confirm">Пароль ещё раз</label>
                        <span class="helper-text" data-error="Введите пароль ещё раз"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="name" type="text" class="validate" name="name" required>
                        <label for="name">Ваше имя</label>
                        <span class="helper-text" data-error="Введите ваше имя"></span>
                    </div>
                </div>
                <input type="hidden" value="{{@root.csrf}}" name="_csrf">
                <input type="submit" class="waves-effect waves-light btn" value="Зарегистрироваться">
            </form>
        </div>
    </div>
</div>